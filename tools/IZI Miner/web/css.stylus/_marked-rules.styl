#marked-rules
  box()
  min-width minContentWidth
  margin boxMargin 0 0 boxMargin + feedbackMargin
  padding 10px 20px
  float left; clear left

  h2
    h2()
    margin-bottom 5px

  ul
    list-style-type none
    padding-left 0
    li
      line-height 30px
      float left; clear left
    li:hover > .clear
      visibility visible

  .rule
    cursor default
    associationRule()

  .coefficient
    coefficient()

  .connective
    connective()

  .ims
    ims()

  .im-value
    imValue()

  .clear
    remove()
    margin-left 20px
    position relative; top 2px
    float left

  .field-sign.negative
    background transparent url('../images/sprite-icons.png') -118px -173px no-repeat
    padding-left 13px