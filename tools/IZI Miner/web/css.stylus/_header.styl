header
  height 146px; width minContentWidth + navWidth + 3*boxMargin
  padding-right boxMargin

  #browser-warning
    margin 0 0 0 2*boxMargin; padding-top 6px
    color: red
    float: left

  #settings
    text-align right
    height 30px
    padding-top 5px
    float right
    a
      color #CEE7F7
      font-size 14px
      font-weight bold
      text-decoration none
      padding-right 12px
    a:hover
      color #FFF
      text-decoration underline
    a#new-task
      background transparent url('../images/sprite-icons.png') -113px -262px no-repeat
      padding 3px 0 0 30px; margin-right: 20px
    a#support
      background transparent url('../images/sprite-icons.png') -14px -611px no-repeat
      padding 3px 0 0 30px; margin-right: 20px
    a#settings-open
      background transparent url('../images/sprite-icons.png') -213px -611px no-repeat
      padding 4px 0 0 30px

  h1
    color h1Color
    font h1Font
    margin 0 0 0 2*boxMargin + feedbackMargin; padding-top: 16px
    letter-spacing 2px
    clear both

    em
      font-style normal
      letter-spacing normal
      position relative; bottom 5px
      margin 0 2px

    sup
      color #9de045
      font-size 0.6em
      letter-spacing normal
      margin-left 10px
      position relative; top -0.8em

    span
      display block
      font-size 19px
      letter-spacing normal
      position relative; top -8px