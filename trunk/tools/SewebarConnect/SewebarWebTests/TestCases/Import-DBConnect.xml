<?xml version="1.0" encoding="utf-8"?>
<PMML xmlns="http://www.dmg.org/PMML-4_0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:pmml="http://www.dmg.org/PMML-4_0" version="4.0"
  xsi:schemaLocation="http://www.dmg.org/PMML-4_0 http://sewebar.vse.cz/schemas/PMML4.0+GUHA0.1.xsd">
  <Header copyright="Copyright (c) KIZI UEP">
    <Extension name="author" value="Administrator"/>
    <Extension name="format" value="4ftMiner.Task"/>
    <Extension name="dataset" value="loans"/>
    <Application name="SEWEBAR" version="1.0"/>
    <Annotation>DM Task export from SEWEBAR DB CONNECT</Annotation>
    <Timestamp>2012-05-09T21:32:55+02:00</Timestamp>
  </Header>
  <MiningBuildTask>
    <Extension name="DatabaseDictionary"><Table name="loans"><Columns><Column name="Salary"
            dataType="integer"/><Column name="District" dataType="string"/><Column name="amount"
            dataType="integer"/><Column name="payments" dataType="integer"/><Column name="duration"
            dataType="integer"/><Column name="status" dataType="string"
            /></Columns><PrimaryKey><Column name="loan_id" primaryKeyPosition="0"
        /></PrimaryKey></Table></Extension>
  </MiningBuildTask>
  <DataDictionary>
    <DataField name="Salary" dataType="integer" optype="categorical"/>
    <DataField name="District" dataType="string" optype="categorical"/>
    <DataField name="amount" dataType="integer" optype="categorical"/>
    <DataField name="payments" dataType="integer" optype="categorical"/>
    <DataField name="duration" dataType="integer" optype="categorical"/>
    <DataField name="status" dataType="string" optype="categorical"/>
  </DataDictionary>
  <TransformationDictionary>
    <DerivedField name="Residency">
      <MapValues outputColumn="Residency">
        <FieldColumnPair column="District" field="Residency"/>
        <InlineTable>
          <row><column>Brno</column><field>More than 0.5 mil</field></row>
          <row><column>Praha</column><field>More than 0.5 mil</field></row>
        </InlineTable>
      </MapValues>
    </DerivedField>
    <DerivedField name="Amount">
      <Discretize field="amount">
        <DiscretizeBin binValue="Low [0;20000]">
          <Interval closure="openClosed" leftMargin="0" rightMargin="20000"/>
        </DiscretizeBin>
        <DiscretizeBin binValue="Medium Consumer [20000;100000]">
          <Interval closure="openClosed" leftMargin="20000" rightMargin="100000"/>
        </DiscretizeBin>
        <DiscretizeBin binValue="High [100000;500000]">
          <Interval closure="openClosed" leftMargin="100000" rightMargin="500000"/>
        </DiscretizeBin>
      </Discretize>
    </DerivedField>
    <DerivedField name="Credit Duration">
      <Discretize field="duration">
        <DiscretizeBin binValue="Extrémní [1;20]">
          <Interval closure="closedClosed" leftMargin="1" rightMargin="20"/>
        </DiscretizeBin>
        <DiscretizeBin binValue="Extrémní [40;60]">
          <Interval closure="openClosed" leftMargin="40" rightMargin="60"/>
        </DiscretizeBin>
      </Discretize>
    </DerivedField>
    <DerivedField name="Credit Quality">
      <MapValues outputColumn="Credit Quality">
        <FieldColumnPair column="status" field="Credit Quality"/>
        <InlineTable>
          <row><column>A</column><field>Good</field></row>
          <row><column>B</column><field>Good</field></row>
          <row><column>C</column><field>Bad</field></row>
          <row><column>D</column><field>Bad</field></row>
        </InlineTable>
      </MapValues>
    </DerivedField>
  </TransformationDictionary>
</PMML>
