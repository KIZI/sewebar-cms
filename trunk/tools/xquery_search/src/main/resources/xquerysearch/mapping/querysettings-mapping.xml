<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" "http://castor.org/mapping.dtd">
<mapping>
	<description>Query Settings mapping</description>
	
	<class name="xquerysearch.domain.arbquery.QuerySettings">
		<map-to xml="QuerySettings" />
		<field name="type" type="string">
			<bind-xml name="Type" node="element" />
		</field>
		<field name="target" type="string">
			<bind-xml name="Target" node="element" />
		</field>
		<field name="resultsAnalysis" type="string">
			<bind-xml name="ResultsAnalysis" node="element" />
		</field>
		<field name="params" type="xquerysearch.domain.arbquery.Params">
			<bind-xml name="Params" node="element" />
		</field>
	</class>

	<class name="xquerysearch.domain.arbquery.Params">
		<map-to xml="Params" />
		<field name="groupBy" type="string">
			<bind-xml name="GroupBy" node="element" />
		</field>
		<field name="fieldRef" type="string">
			<bind-xml name="FieldRef" node="element" />
		</field>
		<field name="clusterBelongingLimit" type="double">
			<bind-xml name="ClusterBelongingLimit" node="element" />
		</field>
		<field name="clusterDistanceFormula" type="string">
			<bind-xml name="ClusterDistanceFormula" node="element" />
		</field>
	</class>
</mapping>