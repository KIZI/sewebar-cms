<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="user">
	<name>plg_user_lmcloud</name>
	<author>Stanislav Vojíř</author>
	<creationDate>April 2013</creationDate>
	<copyright>Copyright (C) 2013 Stanislav Vojíř. All rights reserved.</copyright>
	<authorEmail>stanislav.vojir@vse.cz</authorEmail>
	<version>1.0</version>
	<description>LMCloud user plugin</description>
	<files>
		<filename plugin="lmcloud">lmcloud.php</filename>
		<filename>index.html</filename>
	</files>
  <config>
    <fields name="params">
      <fieldset name="basic">
          <field name="servername" type="text" default="sewebar" label="server_identification" description="unique_server_identification" />
          <field name="lm_url" type="text" default="http://connect-dev.lmcloud.vse.cz/SewebarConnectNext" label="connect_server_url" />
          <field name="admin_password" type="text" default="" label="connect_server_admin_password" />
          <field name="email_from" type="text" default="stanislav.vojir@vse.cz" label="change_password_email_from" />
      </fieldset>
    </fields>
  </config>
	<languages>
		<language tag="en-GB">en-GB.plg_user_lmcloud.ini</language>
		<language tag="en-GB">en-GB.plg_user_lmcloud.sys.ini</language>
	</languages>
  
</extension>
