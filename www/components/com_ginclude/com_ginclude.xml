<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0">
	<name>gInclude</name>
	<creationDate>April 2009</creationDate>
	<author>Stanislav Vojíř</author>
	<authorEmail>stanislav.vojir@gmail.com</authorEmail>
	<authorUrl>http://www.golemsoftware.cz</authorUrl>
	<copyright>(C) 2009 All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<version>1.5.0</version>
	<description>
    <![CDATA[
      Komponenta usnadňující skládání článků pomocí vkládání částí dalších článků/zpráv.
    ]]></description>
	<!-- FRONT-END -->
	<files>
		<filename>ginclude.php</filename>
		<!-- install controllers -->
		<filename>controller.php</filename>
		<!-- install model - one for all -->
		<filename>models/ginclude.php</filename>
		<!-- install views -->
		<filename>views/iframe/articles.html.php</filename>
		<filename>views/iframe/getArticle.html.php</filename>
		<filename>views/iframe/insert.html.php</filename>
		<filename>views/reload/article.html.php</filename>
		<filename>views/reload/articles.html.php</filename>
		<filename>views/reload/changeArticle.html.php</filename>
		<filename>views/reload/message.html.php</filename>
		<filename>views/reload/parts.html.php</filename>
		<!-- install css -->
		<filename>css/component.css</filename>
		<filename>css/general.css</filename>
	</files>
	<languages folder="lang">
		<language tag="en-GB">en-GB.com_ginclude.ini</language>
		<language tag="cs-CZ">cs-CZ.com_ginclude.ini</language>
	</languages>

	<administration>
		<!-- Administration Menu Section -->
		<menu>gInclude</menu>
		<submenu>
			<menu link="option=com_ginclude&amp;task=reload">gInclude - Update</menu>
		</submenu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder to
			copy FROM in the package to install therefore files copied in this section
			are copied from /admin/ in the package -->
		<files folder="administrator">
			<filename>admin.ginclude.php</filename>
			<filename>toolbar.ginclude.html.php</filename>
			<!-- install controllers -->
			<filename>controller.php</filename>
			<!-- install model - one for all -->
			<filename>models/ginclude.php</filename>
			<!-- install views -->
			<filename>views/iframe/articles.html.php</filename>
			<filename>views/iframe/getArticle.html.php</filename>
			<filename>views/iframe/insert.html.php</filename>
			<filename>views/reload/article.html.php</filename>
			<filename>views/reload/articles.html.php</filename>
			<filename>views/reload/changeArticle.html.php</filename>
			<filename>views/reload/message.html.php</filename>
			<filename>views/reload/parts.html.php</filename>
		</files>
		<languages folder="lang">
			<language tag="en-GB">en-GB.com_ginclude.ini</language>
			<language tag="cs-CZ">cs-CZ.com_ginclude.ini</language>
		</languages>
	</administration>
</install>
